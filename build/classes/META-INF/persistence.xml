<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SistemaNenkaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>dominio.Categoria</class>
    <class>dominio.Cliente</class>
    <class>dominio.Compra</class>
    <class>dominio.Corte</class>
    <class>dominio.DetalleCompra</class>
    <class>dominio.DetalleVenta</class>
    <class>dominio.Direccion</class>
    <class>dominio.Empleado</class>
    <class>dominio.Producto</class>
    <class>dominio.Proveedor</class>
    <class>dominio.Puesto</class>
    <class>dominio.Venta</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:C:/SQLite/sistemanenka.db"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
